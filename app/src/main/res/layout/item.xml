<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/card_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="8dp"
	android:layout_marginStart="8dp"
	android:layout_marginEnd="8dp">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/row_img"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:srcCompat="@drawable/ic_launcher_background"
			tools:ignore="MissingConstraints,VectorDrawableCompat"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintDimensionRatio="16:9"/>

		<TextView
			android:id="@+id/row_tv_title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:text="Друзья, не сдавайтесь! Оно того стоит!"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/row_img"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/row_tv_desc"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:text="Настала моя очередь объявить о достижении поставленной цели и получении работы Java-программистом. Я хотел бросить учить программирование раз 10. Это было реально сложно...  Мне 26 лет. Я закончил колледж радиоэлектроники и пару раз сходил в универ ..."
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/row_tv_title"/>

		<TextView
			android:text="1000"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/row_tv_views"
            android:gravity="right"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toBottomOf="@+id/row_tv_desc"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginTop="8dp"/>

		<TextView
			android:text="12.11.2018"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/row_tv_createdTime"
            android:gravity="left"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toBottomOf="@+id/row_tv_desc"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginTop="8dp"/>
	</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>